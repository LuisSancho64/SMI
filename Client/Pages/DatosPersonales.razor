        public string EstadoCivil { get; set; } = "Soltero";
        public string NumeroIdentificacion { get; set; } = "1805569715";
        public string SegundoApellido { get; set; } = "1805569715";
        public string SegundoNombre { get; set; } = "1805569715";
        public string Sexo { get; set; } = "Hombre";
    }

    public class ResidenceData
    {
